[module/powermenu]
type = custom/menu

label-open = X
label-open-foreground = ${colors.primary}
label-close = cancel
label-close-foreground = ${colors.primary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = "sudo -A reboot"
menu-0-1 = shutdown
menu-0-1-exec = "sudo -A 6shutdown now"

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = "xdotool search --classname navigator key ctrl+q; sleep 2; sudo reboot"

menu-2-0 = power off
menu-2-0-exec = "xdotool search --classname navigator key ctrl+q; sleep 2; sudo poweroff"
menu-2-1 = cancel
menu-2-1-exec = menu-open-0


[module/monitor_toggle]
type = custom/script
exec = echo "DISPLAY"
interval = 60
click-left = /home/jan/dotfiles/xmenu/menu.sh


